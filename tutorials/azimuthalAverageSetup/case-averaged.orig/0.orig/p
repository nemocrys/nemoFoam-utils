FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    freeSurf
    {
        type            zeroGradient;
        value           $internalField;
    }

    side
    {
        type            zeroGradient;
        value           $internalField;
    }

    bottom
    {
        type            zeroGradient;
        value           $internalField;
    }    

    crysSurf
    {
        type            zeroGradient;
        value           $internalField;
    }
    "(front|back)"
    {
        type            wedge;
    }
}

